def write_password(password:str):
    '''Helper function but can really be useful anywhere to save a python output to a file'''
    user_file=input("please input your file name ")
    what_for=input("please enter what this password goes to")
    words=[what_for, '-', password, '\n']
    with open(user_file,'w') as f:
        for word in words:
            f.write(word)